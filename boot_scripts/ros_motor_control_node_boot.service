[Unit]
Description=Startup script for the pib motor control node
After=network.target pib_api_boot.service
BindsTo=pib_api_boot.service

[Service]
Type=simple
User=pib
# Disable timeout logic to avoid the daemon preemptively marking the service as failed
TimeoutStartSec=infinity
# The flask api must be fully running for this service to function. Checking regularly until it's responding
ExecStartPre=/bin/bash -c 'until curl --output /dev/null --silent http://localhost:5000; do sleep 3; done'
# Execute python script to save the current UIDs of the bricklets into the database
ExecStart=/usr/bin/python3 /home/pib/ros_working_dir/src/motors/boot_scripts/manageTinkerForgeSettings.py -m updateUIDs
ExecStart=/usr/bin/bash /home/pib/ros_working_dir/src/motors/boot_scripts/ros_motor_control_node_boot.sh

[Install]
WantedBy=multi-user.target